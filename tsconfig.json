{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "build/types",
        "esModuleInterop": true,
        "outDir": "./build",
        "jsx": "react",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "types": ["node"]
    },
    "include": ["src", "custom.d.ts"],
    "exclude": ["node_modules", ".vscode", "dist", "build", "rollup.config.js"]
}